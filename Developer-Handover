const [events, setEvents] = useState({ active: [], past: [], draft: [] });

useEffect(() => {
  const fetchEvents = async () => {
    const allEvents = await getOrganizerEvents();
    const now = new Date();

    setEvents({
      active: allEvents.filter(e => e.status === 'published' && new Date(e.date) >= now),
