const [showUpdateModal, setShowUpdateModal] = useState(false);
const [updateMessage, setUpdateMessage] = useState('');

const sendUpdate = async () => {
  if (!updateMessage.trim()) {
    alert('Please enter a message');
    return;
  }

  await sendEventUpdate(eventId, updateMessage);
  toast.success('Update sent to all attendees');
  setShowUpdateModal(false);
  setUpdateMessage('');
};

// Cancel event confirmation
const [showCancelModal, setShowCancelModal] = useState(false);

const cancelEvent = async () => {
  // Show confirmation dialog
  if (window.confirm('Are you sure you want to cancel this event? This action cannot be undone and all attendees will be notified.')) {
    await updateEventStatus(eventId, 'cancelled');
    toast.success('Event cancelled');
    navigate('/organizer/events');
  }
};
```

