// Feature event (highlight on homepage)
const toggleFeature = async (eventId, currentStatus) => {
  await updateEvent(eventId, { featured: !currentStatus });
  toast.success(currentStatus ? 'Event unfeatured' : 'Event featured');
  // Refresh list
};

// Cancel event
const cancelEvent = async (eventId) => {
  if (window.confirm('Cancel this event? All attendees will be notified and refunds will be processed.')) {
    await updateEvent(eventId, { status: 'cancelled' });
    // Trigger refund workflow
    await processEventRefunds(eventId);
    toast.success('Event cancelled and refunds initiated');
  }
};
```

